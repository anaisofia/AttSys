<p id="notice"><%= notice %></p>
<br>
<br>

<div class="container">
  <h1>Courses</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Start</th>
        <th>Finish</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.start %></td>
          <td><%= course.finish %></td>
          <td><%= course.users.map(&:name).join("<br />").html_safe %></td>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div id="calendar"> <%= render 'shared/calendar' %> </div>

</div>
