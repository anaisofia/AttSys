<p id="notice"><%= notice %></p>

<h1>Courses Users</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_users.each do |courses_user| %>
      <tr>
        <td><%= courses_user.course %></td>
        <td><%= courses_user.user %></td>
        <td><%= link_to 'Show', courses_user %></td>
        <td><%= link_to 'Edit', edit_courses_user_path(courses_user) %></td>
        <td><%= link_to 'Destroy', courses_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

